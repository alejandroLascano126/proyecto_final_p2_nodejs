<!DOCTYPE html>
<html lang="es">

<head>
</head>

<body>
    <button id="btnRegistrar" class="btn btn-success">Crear</button>
    <button id="btnEnviarNuevo" class="btn btn-primary" disabled>Guardar</button>
    <button id="btnEliminar" class="btn btn-danger" disabled>Eliminar</button>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="tablaUsuarios">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Nivel</th>
                    <th>Fecha de Creaci√≥n</th>
                </tr>
            </thead>
            <tbody>
                <% if (usuarios && usuarios.length> 0) { %>
                    <% usuarios.forEach(u=> { %>
                        <tr data-id="<%= u.id %>">
                            <td>
                                <%= u.id %>
                            </td>
                            <td class="editable" data-campo="usuario">
                                <%= u.usuario %>
                            </td>
                            <td class="editable" data-campo="nombre">
                                <%= u.nombre %>
                            </td>
                            <td class="editable" data-campo="apellido">
                                <%= u.apellido %>
                            </td>
                            <td class="editable" data-campo="correo">
                                <%= u.correo %>
                            </td>
                            <td class="editable" data-campo="nivel">
                                <%= u.nivel %>
                            </td>
                            <td>
                                <%= new Date(u.createdAt).toLocaleString() %>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="text-center">No hay usuarios registrados</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>


</body>

</html>